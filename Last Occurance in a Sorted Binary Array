    
	static int binarySearch2(int arr[], int low, int high, int x, int n)
	{
		if(low > high)
			return -1;

		int mid = (low + high) / 2;

		if(x > arr[mid])
			return binarySearch2(arr, mid + 1, high, x, n);

		else if(x < arr[mid])
			return binarySearch2(arr, low, mid - 1, x, n);

		else
		{
			if(mid == n - 1 || arr[mid + 1] != arr[mid])
				return mid;

			else
				return binarySearch2(arr, mid + 1, high, x, n);
		}
	}
